root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

[*.txt]
insert_final_newline = false

[*.py]
indent_size = 4
indent_style = space
max_line_length = 100

[{*.yml,*.yaml,package.json}]
indent_style = space
indent_size = 2
