#!/usr/bin/env python

from flake8.main import git
import sys

COMPLEXITY = git.config_for('FLAKE8_COMPLEXITY', 79)
IGNORE = git.config_for('FLAKE8_IGNORE', 'E251')
STRICT = git.config_for('FLAKE8_STRICT', False)
LAZY = git.config_for('FLAKE8_LAZY', False)


if __name__ == '__main__':
    sys.exit(git.hook(
        complexity=COMPLEXITY,
        strict=STRICT,
        ignore=IGNORE,
        lazy=LAZY,
    ))

